	pages = {151--161},
	file = {Full Text PDF:/home/sebastian/Zotero/storage/54CKL5WF/Barzaghi - 2024 - Towards a FAIR Ontology Pattern for Describing Heritage Risk Assessment Activities.pdf:application/pdf},
