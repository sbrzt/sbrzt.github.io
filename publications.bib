	publisher = {Springer Nature Switzerland},
	author = {Barzaghi, Sebastian and Heibi, Ivan and Moretti, Arianna and Peroni, Silvio},
	editor = {Demartini, Gianluca and Hose, Katja and Acosta, Maribel and Palmonari, Matteo and Cheng, Gong and Skaf-Molli, Hala and Ferranti, Nicolas and Hernández, Daniel and Hogan, Aidan},
	year = {2025},
	keywords = {cultural heritage, OWL, FAIR principles, ontology development, 3D digitisation, application profiles},
	pages = {197--217},
	file = {Full Text PDF:/home/sebastian/Zotero/storage/A35VDRHT/Barzaghi et al. - 2025 - Developing Application Profiles for Enhancing Data and Workflows in Cultural Heritage Digitisation P.pdf:application/pdf},
